{% extends 'base.html.twig' %}

{% block title %}CV Guillaume Vignères - Administration{% endblock %}

{% block body %}
    <main>
        <section class="containerSectionAdmin">
            {% include('/administration/navAdministration.html.twig') %}
            <div class="containerAdmin">
                
                <div class="adminTab">
                <h3>Outils<a href="{{ path('addEnvironment')}}"><img src="{{ asset('img/icons8-plus-50.png') }}"></a></h3>
                
                    <table>
                        <thead>
                            <tr>
                                <th class="column1">Outil</th>
                                <th class="column2">Image</th>
                                <th class="column3">Modifier</th>
                                <th class="column4 columnEnd">Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for environment in environments %}
                                <tr>
                                    <td class="column1">{{ environment.environmentName }}</td>
                                    <td class="column2"><img src="{{ asset('img/upload/tools/' ~ environment.imageEnvironment  ) }}"></td>
                                    <td class="column3"><a href="{{ path('modifyEnvironment', {'id': environment.id}) }}"><img src="{{ asset('img/crayon.png') }}"></a></td>
                                    <td class="column4 columnEnd"><a href="{{ path('deleteEnvironment', {'id': environment.id}) }}?admin=1" class="delete" data-confirm="Êtes vous sûr de vouloir effacer ce projet?"><img src="{{ asset('img/poubelle.png') }}"></a></td>                                    
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>   
                </div>
                <div class="containerAdminMobile">
                <h3>Outils<a href="{{ path('addEnvironment')}}"><img src="{{ asset('img/icons8-plus-50.png') }}"></a></h3>
                    {% for environment in environments %}
                        <table class="panel">
                            <tr class="trCompte">
                                <td>Outil:</td>
                                <td>{{ environment.environmentName }}</td>
                            </tr>
                            <tr class="trCompte">
                                <td>Image:</td>
                                <td><img src="{{ asset('img/upload/tools/' ~ environment.imageEnvironment ) }}"></td>
                            </tr>
                            <tr class="trCompte">
                                <td>Modifier:</td>
                                <td><a href="{{ path('modifyEnvironment', {'id': environment.id }) }}"><img src="{{ asset('img/crayon.png') }}"></a></td>
                            </tr>
                            <tr class="trCompte">
                                <td>Supprimer:</td>
                                <td><a href="{{ path('deleteEnvironment', {'id': environment.id }) }}?admin=1" class="delete" data-confirm="Êtes vous sûr de vouloir effacer ce projet?"><img src="{{ asset('img/poubelle.png') }}"></a></td>                                    
                            </tr>
                        </table>
                    {% endfor %}
                </div>
                <div id="pagingAdminUsers" class="paging border-top">
                    {% include('/paging/paging.html.twig') %}
                </div>  
            </div>
        </section>
    </main>
{% endblock %}
