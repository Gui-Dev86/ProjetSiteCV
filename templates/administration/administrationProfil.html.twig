{% extends 'base.html.twig' %}

{% block title %}CV Guillaume Vignères - Administration{% endblock %}

{% block body %}
    <main>
        <section class="containerSectionAdmin">
            {% include('/administration/navAdministration.html.twig') %}
            <div class="containerAdmin">
                <div class="adminTabProfil">
                    <h3>Profil</h3>
                    <div class="containerProfil">
                        <div class="containerDatasProfil">
                            <img src="{{ asset('img/upload/avatars/' ~ app.user.avatar ) }}"  alt="avatar">
                            <h4>{{ app.user.username }}</h4><br />
                            <p><b>Ville:</b> {{ app.user.city }}</p><br />
                            <p><b>Téléphone:</b> {{ app.user.phone }}</p><br />
                            <p><b>Email:</b> {{ app.user.email }}</p><br />
                            <p><b>Dernière mise à jour:</b></p>
                            {% if app.user.dateUpdate %}
                                <p>{{ app.user.dateUpdate | date('d-m-Y') }}</p>
                            {% else %}
                                <p>---</p>
                            {% endif %}
                            </div>
                        <div class="containerModifyProfil">
                            <h6>Modifier votre compte</h6>
                            <form action="/profil/modifier" method="post">                         
                                <button type="submit" name="modifyDatas" class="btnValidate btnUserProfil">Modifier vos informations</button>
                            </form>
                            <form action="/profil/modifier/password{{ app.user.id }}" method="post"> 
                                <button type="submit" name="modifyPass" class="btnValidate btnUserProfil">Modifier votre mot de passe</button>           
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
